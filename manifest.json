{
   "manifest_version": 2,
   "name": "Beyond the Wallboard",
   "version": "0.1",
   "background": { "page": "bg.html" },
   "browser_action": {
      "default_icon": "resources/images/revolver_t_19.png",
      "default_title": "Beyond the Wallboard"
   },
   "description": "Create a slideshow with the opened tabs.",
   "author": "Lucas Bernalte & Adrian Caballero",
   "icons": {
      "128": "resources/images/revolver_t_128.png",
      "48": "resources/images/revolver_t_48.png"
   },
   "options_page": "options.html",
   "permissions": [
	   "tabs",
	   "idle",
	   "storage",
	   "activeTab",
        "*://*/*",
        "<all_urls>"
    ],
   "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "content_script.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "resources/css/main.css"
    ]
}
